{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",

        "artifacts": "readonly",
        "before": "readonly",
        "beforeEach": "readonly",
        "contract": "readonly",
        "describe": "readonly",
        "expect": "readonly",
        "it": "readonly",
        "web3": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-empty": ["error", { "allowEmptyCatch": true }]
    }
}
